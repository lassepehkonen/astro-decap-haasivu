---
import removeTrailingSlash from "@/utils/removeTrailingSlash";
import presentation from "@/data/presentation";

const pathname = removeTrailingSlash(Astro.url.pathname);
---

<header class="z-40 flex w-full flex-col gap-2 md:flex-row md:justify-between">
  <a href={`mailto:${presentation.mail}`} class="hover:text-rose-gold font-serif text-lg">
    {presentation.mail}
  </a>

  <nav role="navigation">
    <ul
      role="list"
      class="flex flex-row gap-4 px-6 py-4 rounded-lg bg-neutral-900/80 shadow-md backdrop-blur-sm md:gap-6"
      style="border-radius: 12px;"
    >
      <li>
        <a
          href="/"
          class:list={{
            ["hover:text-rose-gold"]: true,
            ["text-rose-gold font-bold"]: pathname === "/",
            ["text-neutral-100"]: pathname !== "/",
            "font-serif text-lg": true,
          }}
        >Home</a>
      </li>
      <li>/</li>
      <li>
        <a
          href="/posts"
          class:list={{
            ["hover:text-rose-gold"]: true,
            ["text-rose-gold font-bold"]: pathname === "/posts",
            ["text-neutral-100"]: pathname !== "/posts",
            "font-serif text-lg": true,
          }}
        >Posts</a>
      </li>
    </ul>
  </nav>
</header>

