---
import Header from "../components/Header.astro";
import BlurCircle from "@/components/shared/BlurCircle.astro";
import theme from "@/data/theme";
import SEOTags from "@/components/seo/SEOTags.astro";

import "@fontsource/open-sans";
import "@fontsource/merriweather";
import "@/styles/tailwind.css";
import "@/styles/post.css";

export interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <SEOTags title={title} />

  <body
  class="mx-auto flex min-h-screen max-w-[872px] flex-col gap-9 px-10 py-8 text-sm text-neutral-400 bg-gradient-to-r from-rose-gold via-rose-gold-light to-rose-gold-dark bg-[length:400%] animate-gradient"
  style="font-family: 'Open Sans', sans-serif;"
>

    <Header />
    <BlurCircle position="top" color={theme.colors.blur.top} />
    <BlurCircle position="bottom" color={theme.colors.blur.bottom} />
    <slot />
    <style is:global>
      html {
        font-family: "Open Sans", sans-serif;  /* Määritetään oletus sans-serif fontti */
      }

      h1, h2, h3, h4, h5, h6 {
        font-family: "Merriweather", serif;   /* Määritetään otsikoille serif-fontti */
        color: #ffffff;  /* Esim. ruusukullan värinen otsikkoteksti */
      }

      p {
        font-family: "Open Sans", sans-serif;  /* Määritetään oletus sans-serif fontti */
        color: #382929;  /* Esim. vaaleanharmaa teksti */
        line-height: 1.75;  /* Parannetaan luettavuutta */
      }

      a {
        font-family: "Open Sans", sans-serif;  /* Linkit myös sans-serif fontilla */
        color: #382929;  /* Esim. vaalean ruusukullan väri linkeille */
      }

    </style>
  </body>
</html>
